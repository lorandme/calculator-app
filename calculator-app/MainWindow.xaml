<Window x:Class="calculator_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calculator_app"
        mc:Ignorable="d"
        Title="Calculator" Height="550" Width="350"
        ResizeMode="NoResize">
    <Grid>
        <!-- Definim rândurile și coloanele pentru layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Zona de afișare a rezultatului -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                Text="Standard" FontSize="12" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Padding="10" TextWrapping="Wrap"/>
        
        <TextBlock Grid.Row="1" Grid.ColumnSpan="4"
                   Text="0" FontSize="32" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Padding="20" TextWrapping="Wrap"/>

        

        <!-- Butoane de Memorie -->
        <Button Content="MC" Grid.Row="2" Grid.Column="0"/>
        <Button Content="M+" Grid.Row="2" Grid.Column="1"/>
        <Button Content="M-" Grid.Row="2" Grid.Column="2"/>
        <Button Content="MR" Grid.Row="2" Grid.Column="3"/>

        <!-- Butoane funcționale -->
        <Button Content="%" Grid.Row="3" Grid.Column="0"/>
        <Button Content="CE" Grid.Row="3" Grid.Column="1"/>
        <Button Content="C" Grid.Row="3" Grid.Column="2"/>
        <Button Content="Backspace" Grid.Row="3" Grid.Column="3"/>

        <Button Content="1/x" Grid.Row="4" Grid.Column="0"/>
        <Button Content="X²" Grid.Row="4" Grid.Column="1"/>
        <Button Content="²√X" Grid.Row="4" Grid.Column="2"/>
        <Button Content="/" Grid.Row="4" Grid.Column="3"/>

        <!-- Butoane numerice -->
        <Button Content="7" Grid.Row="5" Grid.Column="0"/>
        <Button Content="8" Grid.Row="5" Grid.Column="1"/>
        <Button Content="9" Grid.Row="5" Grid.Column="2"/>
        <Button Content="*" Grid.Row="5" Grid.Column="3"/>

        <Button Content="4" Grid.Row="6" Grid.Column="0"/>
        <Button Content="5" Grid.Row="6" Grid.Column="1"/>
        <Button Content="6" Grid.Row="6" Grid.Column="2"/>
        <Button Content="-" Grid.Row="6" Grid.Column="3"/>

        <Button Content="1" Grid.Row="7" Grid.Column="0"/>
        <Button Content="2" Grid.Row="7" Grid.Column="1"/>
        <Button Content="3" Grid.Row="7" Grid.Column="2"/>
        <Button Content="+" Grid.Row="7" Grid.Column="3"/>

        <Button Content="+/-" Grid.Row="8" Grid.Column="0"/>
        <Button Content="0" Grid.Row="8" Grid.Column="1"/>
        <Button Content="." Grid.Row="8" Grid.Column="2"/>
        <Button Content="=" Grid.Row="8" Grid.Column="3"/>
    </Grid>
</Window>
